[user]
	name = Steve Newell
	email = steve.newell@lvt.com
[alias]
	st = status -sb
  ci = commit
  co = checkout
  br = branch
[core]
  editor = vim
	excludesfile = /Users/steve.newell/.gitignore
[format]
  pretty = oneline
[merge]
  tool = opendiff
[push]
	autoSetupRemote = true
[credential]
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
